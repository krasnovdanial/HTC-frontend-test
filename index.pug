    body
        .wrapper
            header.header
                ul.header__inner
                    li.header__logo
                        a(href="#")  
                            img.header__logo-img(src="../images/favicon.svg", alt="Favicon(Inside the red circle is a white triangle)")
                        h1.header__logo-item Видеосервис
                    li.header__search
                        input.header__search-input(type="search", placeholder="Поиск..." onfocus="this.placeholder=''" onblur="this.placeholder='Поиск...'" spellcheck="true")
                        button.header__search-btn Найти
                    div.header__form-search-btn
                        form.header__form-search
                            input.header__form-search-input(type="text" id="input-serach-btn" placeholder="Поиск..")
                        i.fa.fa-search(aria-hidden="true")
                    li.header__login
                        .header__login-exit#auth-login
                            p.header__login-name#login-name
                            button.header__login-button#auth-login__btn Выйти
                        button.login-button#btn Войти
                div.header__input-for-login#log
                    form.header__input-for-form(action="/action_page.php")
                        input.header__input-for-input(type="text" placeholder="Enter Login" id="login-input" name="login" required)
                .header__registration#modal-Btn
                    form.header__registration-form
                        .form-outer
                            button.header__registration-close x
                            h2.header__registration-item Вход
                            input.header__registration-input(type="text", name="login" id="login" placeholder="Логин" onfocus="this.placeholder=''" onblur="this.placeholder='Логин'" required minlength="3" maxlength="30")
                            input.header__registration-input(type="password", name="password" id="password" placeholder="Пароль"  onfocus="this.placeholder=''" onblur="this.placeholder='Пароль'" min="8" required)
                            .header__checkbox
                                input.header__checkbox-input#remember(type="checkbox", id="remember" name="remember")
                                label.header__checkbox-label(for="remember") Запомнить
                            button.header__checkbox-btn#submit-btn Войти
            main.main
                section.section-content
                    ul.section-content__tabs
                        li.section-content-list
